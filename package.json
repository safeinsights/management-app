        "@sentry/nextjs": "^8.39.0",
        "@tabler/icons-react": "^3.22.0",
        "@tanstack/react-query": "^5.61.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/papaparse": "^5.3.15",
        "@types/uuid": "^10.0.0",
        "@vanilla-extract/css": "^1.16",
        "@vanilla-extract/next-plugin": "^2.4",
