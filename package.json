{
    "name": "management-app",
    "version": "0.0.1",
    "private": true,
    "description": "The SafeInsights management app serves as an interface for researchers to submit and reviewers to approve study proposals.",
    "license": "AGPL-3.0-or-later",
    "author": "Nathan Stitt",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "build:lambda": "./bin/build-lambda",
        "ci:server": "./bin/ci-server",
        "dev": "next dev --turbopack -p 4000",
        "prepare": "panda codegen",
        "build": "next build",
        "db:migrate": "./bin/migrate-dev-db",
        "start": "next start",
        "deploy": "tsx bin/deploy.ts",
        "lint": "eslint . && prettier --check --log-level warn .",
        "validate-actions": "tsx tests/validate-actions.ts",
        "lint:fix": "eslint --fix . && prettier --write --log-level warn .",
        "pre:push": "run-p lint:fix typecheck validate-actions",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "update-db-types": "kysely-codegen --out-file src/database/types.ts",
        "checks": "run-p -c typecheck lint validate-actions",
        "test:e2e": "playwright test",
        "test:e2e:debug": "playwright test --ui --headed --debug",
        "test:unit": "vitest",
        "test": "run-p -c test:*",
        "test:coverage": "tsx tests/merged-coverage.ts",
        "pre:commit": "npx lint-staged",
        "update-all-packages": "npx npm-check-updates -u"
    },
    "dependencies": {
        "@aws-sdk/client-codebuild": "^3.934.0",
        "@aws-sdk/client-ecr": "^3.934.0",
        "@aws-sdk/client-s3": "^3.933.0",
        "@aws-sdk/client-secrets-manager": "^3.933.0",
        "@aws-sdk/client-sts": "^3.933.0",
        "@aws-sdk/credential-provider-ini": "^3.934.0",
        "@aws-sdk/lib-storage": "^3.933.0",
        "@aws-sdk/s3-presigned-post": "^3.933.0",
        "@aws-sdk/s3-request-presigner": "^3.933.0",
        "@casl/ability": "^6.7.3",
        "@clerk/nextjs": "^6.35.2",
        "@faker-js/faker": "^10.1.0",
        "@mantine/core": "^8.3",
        "@mantine/dropzone": "^8.3",
        "@mantine/form": "^8.3",
        "@mantine/modals": "^8.3",
        "@mantine/notifications": "^8.3",
        "@phosphor-icons/react": "^2.1.10",
        "@sentry/nextjs": "^10.25.0",
        "@tanstack/react-query": "^5.90.10",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/papaparse": "^5.5.0",
        "aws-iam-policy-types": "^1.0.2",
        "aws-sdk": "^2.1692.0",
        "child_process": "^1.0.2",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.19",
        "debug": "^4.4.3",
        "eventsource-parser": "^3.0.6",
        "highlight.js": "^11.11.1",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.28.8",
        "kysely-ctl": "^0.19.0",
        "libphonenumber-js": "^1.12.27",
        "mailgun.js": "^12.1.1",
        "mantine-datatable": "^8.3.8",
        "mantine-form-zod-resolver": "^1.3.0",
        "next": "^16.0.3",
        "next-swagger-doc": "^0.4",
        "papaparse": "^5.5.3",
        "pg": "^8.16.3",
        "qrcode.react": "^4.2.0",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "react-icons": "^5.5.0",
        "react-phone-number-input": "^3.4.14",
        "remeda": "^2.32.0",
        "server-only": "^0.0.1",
        "si-encryption": "github:safeinsights/encryption#75ea533d9d0fb7743b41ae22c8fce64492bfefec",
        "uuid": "^13.0.0",
        "validator": "13.15.23",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@clerk/testing": "^1.13.16",
        "@eslint/js": "^9.39.1",
        "@next/eslint-plugin-next": "^16.0.3",
        "@octokit/rest": "^22.0.1",
        "@pandacss/dev": "^1.5.1",
        "@playwright/test": "^1.56",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3",
        "@testing-library/user-event": "^14.6.1",
        "@types/debug": "^4.1.12",
        "@types/minimist": "^1.2.5",
        "@types/react": "19.2.6",
        "@vitejs/plugin-react": "^5.1.1",
        "aws-sdk-client-mock": "^4.1.0",
        "dotenv": "*",
        "eslint": "^9.39.1",
        "eslint-config-next": "*",
        "eslint-config-prettier": "*",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.5.0",
        "happy-dom": "*",
        "husky": "^9.1.7",
        "kysely-codegen": "^0.19.0",
        "lint-staged": "^16.2.6",
        "minimist": "^1.2.8",
        "monocart-reporter": "^2.9.23",
        "next-router-mock": "^1.0.4",
        "npm-run-all": "*",
        "pg-transactional-tests": "^1.2.0",
        "prettier": "*",
        "tsx": "4.20.6",
        "typescript-eslint": "^8.47.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "*",
        "vitest-monocart-coverage": "^4.0.0"
    }
}
