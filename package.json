{
    "name": "management-app",
    "version": "0.0.1",
    "private": true,
    "description": "The SafeInsights management app serves as an interface for researchers to submit and reviewers to approve study proposals.",
    "license": "AGPL-3.0-or-later",
    "author": "Nathan Stitt",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "build:lambda": "./bin/build-lambda",
        "build:docker:production": "./bin/prod-docker-build",
        "build:docker:ci": "./bin/prod-docker-build ci-only-do-not-push",
        "ci:server": "./bin/ci-server",
        "dev": "next dev --turbopack -p 4000",
        "prepare": "panda codegen",
        "build": "next build",
        "db:migrate": "./bin/migrate-dev-db",
        "start": "next start",
        "deploy": "tsx bin/deploy.ts",
        "lint": "next lint && prettier --check .",
        "validate-actions": "tsx tests/validate-actions.ts",
        "lint:fix": "next lint --fix && prettier --write .",
        "pre:push": "run-s lint:fix typecheck",
        "typecheck": "cd src && tsc --noEmit",
        "update-db-types": "kysely-codegen --out-file src/database/types.ts",
        "checks": "run-p -c typecheck lint validate-actions",
        "test:e2e": "playwright test",
        "test:unit": "vitest",
        "test": "run-p -c test:*",
        "test:coverage": "tsx tests/merged-coverage.ts",
        "pre:commit": "npx lint-staged",
        "update-all-packages": "npx npm-check-updates -u"
    },
    "dependencies": {
        "@aws-sdk/client-codebuild": "^3.775.0",
        "@aws-sdk/client-ecr": "^3.758.0",
        "@aws-sdk/client-s3": "^3.758.0",
        "@aws-sdk/client-secrets-manager": "^3.758.0",
        "@aws-sdk/client-sts": "^3.758.0",
        "@aws-sdk/credential-provider-ini": "^3.758.0",
        "@aws-sdk/lib-storage": "^3.758.0",
        "@aws-sdk/s3-presigned-post": "^3.758.0",
        "@aws-sdk/s3-request-presigner": "^3.758.0",
        "@clerk/nextjs": "^6.13.0",
        "@faker-js/faker": "^9.5.1",
        "@hookform/resolvers": "^4.1.3",
        "@mantine/core": "^8.0",
        "@mantine/dropzone": "^8.0",
        "@mantine/form": "^8.0",
        "@mantine/modals": "^8.0",
        "@mantine/notifications": "^8.0",
        "@phosphor-icons/react": "^2.1.7",
        "@sentry/nextjs": "^9.4.0",
        "@tanstack/react-query": "^5.67.1",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/papaparse": "^5.3.15",
        "@types/uuid": "^10.0.0",
        "aws-iam-policy-types": "^1.0.2",
        "aws-sdk": "^2.1692.0",
        "child_process": "^1.0.2",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.13",
        "debug": "^4.4.0",
        "highlight.js": "^11.11.1",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.27.5",
        "kysely-ctl": "^0.11.1",
        "libphonenumber-js": "^1.12.8",
        "mailgun.js": "^12.0.1",
        "mantine-datatable": "^7.17.1",
        "mantine-form-zod-resolver": "^1.1.0",
        "next": "^15.2.4",
        "next-swagger-doc": "^0.4",
        "papaparse": "^5.5.2",
        "pg": "^8.13.3",
        "qrcode.react": "^4.2.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-icons": "^5.5.0",
        "react-phone-number-input": "^3.4.12",
        "remeda": "^2.21.0",
        "server-only": "^0.0.1",
        "si-encryption": "github:safeinsights/encryption#8b6467a921278408e1f9e4159446e766f1d55e2e",
        "uuid": "^11.1.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@clerk/testing": "^1.4.25",
        "@eslint/js": "^9.21.0",
        "@next/eslint-plugin-next": "^15.2.1",
        "@octokit/rest": "^21.1.1",
        "@pandacss/dev": "^0.53.1",
        "@playwright/test": "^1.52",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/debug": "^4.1.12",
        "@types/minimist": "^1.2.5",
        "@types/react": "19.0.10",
        "@vitejs/plugin-react": "^4.3.4",
        "aws-sdk-client-mock": "^4.1.0",
        "dotenv": "*",
        "eslint": "^9.21.0",
        "eslint-config-next": "*",
        "eslint-config-prettier": "*",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "happy-dom": "*",
        "husky": "^9.1.7",
        "kysely-codegen": "^0.17.0",
        "lint-staged": "^15.4.3",
        "minimist": "^1.2.8",
        "monocart-reporter": "^2.9.15",
        "next-router-mock": "^0.9.13",
        "npm-run-all": "*",
        "pg-transactional-tests": "^1.2.0",
        "prettier": "*",
        "tsx": "^4.19.3",
        "typescript-eslint": "^8.26.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "*",
        "vitest-monocart-coverage": "^3.0.1"
    }
}
