{
    "name": "management-app",
    "version": "0.0.1",
    "private": true,
    "description": "The SafeInsights management app serves as an interface for researchers to submit and reviewers to approve study proposals.",
    "license": "AGPL-3.0-or-later",
    "author": "Nathan Stitt",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "build:lambda": "./bin/build-lambda",
        "ci:server": "./bin/ci-server",
        "dev": "next dev --turbopack -p 4000",
        "prepare": "panda codegen",
        "build": "next build",
        "db:migrate": "./bin/migrate-dev-db",
        "start": "next start",
        "deploy": "tsx bin/deploy.ts",
        "lint": "eslint . && prettier --check --log-level warn .",
        "validate-actions": "tsx tests/validate-actions.ts",
        "lint:fix": "eslint --fix . && prettier --write --log-level warn .",
        "pre:push": "run-p lint:fix typecheck validate-actions",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "update-db-types": "kysely-codegen --out-file src/database/types.ts",
        "checks": "run-p -c typecheck lint validate-actions",
        "test:e2e": "playwright test",
        "test:e2e:debug": "playwright test --ui --headed --debug",
        "test:unit": "vitest",
        "test": "run-p -c test:*",
        "test:coverage": "tsx tests/merged-coverage.ts",
        "pre:commit": "npx lint-staged",
        "update-all-packages": "npx npm-check-updates -u"
    },
    "dependencies": {
        "@aws-sdk/client-codebuild": "^3.879.0",
        "@aws-sdk/client-ecr": "^3.879.0",
        "@aws-sdk/client-s3": "^3.879.0",
        "@aws-sdk/client-secrets-manager": "^3.879.0",
        "@aws-sdk/client-sts": "^3.879.0",
        "@aws-sdk/credential-provider-ini": "^3.879.0",
        "@aws-sdk/lib-storage": "^3.879.0",
        "@aws-sdk/s3-presigned-post": "^3.879.0",
        "@aws-sdk/s3-request-presigner": "^3.879.0",
        "@casl/ability": "^6.7.3",
        "@clerk/nextjs": "^6.31.8",
        "@faker-js/faker": "^10.0.0",
        "@mantine/core": "^8.2",
        "@mantine/dropzone": "^8.2",
        "@mantine/form": "^8.2",
        "@mantine/modals": "^8.2",
        "@mantine/notifications": "^8.2",
        "@phosphor-icons/react": "^2.1.10",
        "@sentry/nextjs": "^10.8.0",
        "@tanstack/react-query": "^5.85.9",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/papaparse": "^5.3.16",
        "@types/uuid": "^10.0.0",
        "aws-iam-policy-types": "^1.0.2",
        "aws-sdk": "^2.1692.0",
        "child_process": "^1.0.2",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.18",
        "debug": "^4.4.1",
        "highlight.js": "^11.11.1",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.28.5",
        "kysely-ctl": "^0.18.0",
        "libphonenumber-js": "^1.12.15",
        "mailgun.js": "^12.0.3",
        "mantine-datatable": "^8.2.0",
        "mantine-form-zod-resolver": "^1.3.0",
        "next": "^15.5.2",
        "next-swagger-doc": "^0.4",
        "papaparse": "^5.5.3",
        "pg": "^8.16.3",
        "qrcode.react": "^4.2.0",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "react-icons": "^5.5.0",
        "react-phone-number-input": "^3.4.12",
        "remeda": "^2.30.0",
        "server-only": "^0.0.1",
        "si-encryption": "github:safeinsights/encryption#75ea533d9d0fb7743b41ae22c8fce64492bfefec",
        "uuid": "^11.1.0",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@clerk/testing": "^1.12.3",
